<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>us.Lab4.controller.HomeController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Product_List</servlet-name>
        <servlet-class>us.Lab4.controller.Product_ListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product_List</servlet-name>
        <url-pattern>/Product_List.go</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cartPlace</servlet-name>
        <servlet-class>us.Lab4.controller.CartPlaceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartPlace</servlet-name>
        <url-pattern>/cartplace.go</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>us.Lab4.controller.Shopping_CartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/Shopping_Cart.go</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bill</servlet-name>
        <servlet-class>us.Lab4.controller.BillController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bill</servlet-name>
        <url-pattern>/bill.go</url-pattern>
    </servlet-mapping>
</web-app>